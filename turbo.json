{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "check-type": {
      "dependsOn": ["^check-type"],
      "inputs": ["$TURBO_DEFAULT$", "!pnpm-lock.yaml"],
      "outputs": []
    }
  },
  "boundaries": {
    "tags": {
      "app": {
        "dependencies": {
          "allow": ["feature", "page", "shared"],
          "deny": ["app"]
        }
      },
      "page": {
        "dependencies": {
          "allow": ["feature", "shared"],
          "deny": ["page", "app"]
        }
      },
      "feature": {
        "dependencies": {
          "allow": ["shared"],
          "deny": ["feature", "page", "app"]
        }
      }
    }
  }
}
